generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Mood {
  id        String   @id @default(cuid())
  emoji     String
  comment   String?
  userId    String   // Clerk user ID
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
